          {{#x-option value=deifficulty }}
              {{deifficulty}}
          {{/x-option}}
        {{/each}}
    {{/x-select}} --}}
</p>
<p>
    <FileUploader @fileInputChanged={{action 'receiveFile'}}>
        {{input type='file' id='file-field' value=this.file}} 
        <img id="preview-image" src={{@tutorial.thumbnailImage}} alt="tutorial thumbnail" class="small-image">
    </FileUploader>
</p>
