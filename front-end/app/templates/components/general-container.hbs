<LinkTo @route="cart" class="cart-link">
  <i class="fa fa-shopping-cart"></i>
  {{#if this.cart.items.length}}
    <span class="cart-count d-inline-flex justify-content-center align-items-center">
      {{log this.itemCount}}
      {{this.itemCount}}
    </span>
  {{/if}}
</LinkTo>
<main class="container mt-5">
  {{yield}}
</main>